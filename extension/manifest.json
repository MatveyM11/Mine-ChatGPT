{
  "manifest_version": 3,
  "name": "Mine ChatGPT",
  "version": "1.1",
  "permissions": ["activeTab", "scripting"],
  "description": "OpenSourced ChatGPT downloader in markdown format. Download all text or markdown-styled code blocks",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["/contentScript.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
